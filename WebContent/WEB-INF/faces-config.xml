<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    
    <application>
    	<message-bundle>com.leocaliban.financas.resources.Messages</message-bundle>
	</application>
	
	<!-- Aplicando navegação explícita -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>/CadastroLancamento.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>consulta</from-outcome>
			<to-view-id>/ConsultaLancamento.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

</faces-config>
